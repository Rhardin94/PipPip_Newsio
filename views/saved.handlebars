<div class="container">
  <div class="jumbotron bg-dark text-danger">
    <h1 class="text-center">Union-Jack Mongo Scraper!</h1>
    <p class="text-center">Get your news fast! Worthy of the Royal Family!</p>
    <hr>
    <div class="buttons text-center">
      <button class="btn btn-primary scrape text-white" role="button">Scrape New Articles!</button>
      <a href="/"><button class="btn btn-secondary saved text-white" role="button">All Articles!</button></a>
      <button class="btn btn-danger clear text-white" role="button">Clear Articles!</button>
    </div>
  </div>
  <div class="row bg-dark border border-danger">
    <div class="col-lg-12 border border-danger artHeader text-white text-center">
      <h2 class="text-center text-danger bg-dark">Articles:</h2>
    </div>
    {{#each stories}}
    <div class="col-lg-3 articles">
      <div class="card m-2">
        <div class="card-body">
          <a href="{{url}}" target="_blank"><h3 class="card-title">{{headline}}</h3></a>
          <hr>
          <h4 class="card-text">{{summary}}</h4>
          <button class="btn btn-warning unsave" data-id="{{_id}}">Un-Save Article!</button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>